doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/index.css")
        title Login
    body 
        section.login 
            .login__wrapper 
                .login__head 
                    h2.login__caption Bienvenido
                .login__form__wrapper
                    form(action="/login/password" method="post").login__form
                        .login__input-group 
                            //label.login__form__label Email
                            input.login__form__control(type="email" name="username" placeholder="Escribe tu usuario" required )

                        .login__input-group 
                            //label.login__form__label Contraseña
                            input.login__form__control(type="password" name="password" placeholder="Contraseña" required)

                        .login__input-group 
                            input.login__form__submit(type="submit" name="submit" value="Ingresar")

