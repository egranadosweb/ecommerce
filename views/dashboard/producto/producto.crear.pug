
extends ../layout.pug

block content
    .d-content__modulo

        h1.d-content__h1 Crear nuevo producto
        
        .d-content__form

            form#form_crear_producto(action="/producto", method="post" enctype="multipart/form-data")

                .input__group
                    label Nombre
                    input(type="text" name="nombre" placeholder="Escribe el nombre del producto..." )

                .input__group
                    label Descripción
                    textarea(name="descripcion" placeholder="Escribe una descripción para el producto")
                
                .form__group
                    .input__group
                        label Precio
                        input(type="number" name="precio" )
                    .input__group
                        label Precio anterior
                        input(type="number" name="precioAnterior")


                .form__select__group

                    .input__group
                        label Categoria
                        select(name="categoria_id")
                            each val in categorias
                                option(value=`${val.id}`) #{val.nombre}

                    .input__group
                        label Marca
                        select(name="marca_id")
                            each val in marcas
                                option(value=`${val.id}`) #{val.nombre}

                    .input__group
                        label Estado
                        select(name="productoestado_id")
                            each val in estados
                                option(value=`${val.id}`) #{val.estado}

                .input__img__group 

                        p.input__img__caption Imagenes del producto

                        .input__img__grid 

                            .input__img__column 
                                .input__view.input__drag
                                    img.input__img(src="" alt="" name="imagen1")
                                .input__file__group
                                    label Escoge una imagen
                                    input.input__file__img(type="file", name="imagen1")


                            .input__img 
                                .input__view.input__drag
                                    img.input__img(src="" alt="" name="imagen2")
                                .input__form__group
                                    label Escoge una imagen
                                    input.input__file__img(type="file", name="imagen2")
                                
                                
                            .input__img 
                                .input__view.input__drag
                                    img.input__img(src="" alt="" name="imagen3")

                                .input__form__group
                                    label Escoge una imagen
                                    input.input__file__img(type="file", name="imagen3")
                                
                            
                .input__group
                    
                    button.btn.btn__submit(type="submit") Guardar

            if err 
                p #{err}
            if msg 
                p #{msg}
        